<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/labelData"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="2dp"
                    android:text="Data:"
                    android:textColor="@color/colorAccentPressed" />

                <TextView
                    android:id="@+id/txtData"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelData"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:text="07/12/2018"
                    android:textColor="@color/colorAccentPressed"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblEnderecoAtividades"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtData"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:text="Endereço:"
                    android:textColor="@color/colorAccentPressed" />

                <TextView
                    android:id="@+id/txtEnderecoAtividades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblEnderecoAtividades"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:text="Rua Orfanatrófio 1111"
                    android:textColor="@color/colorAccentPressed"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDescricaoAtividades"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtEnderecoAtividades"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:text="Descrição:"
                    android:textColor="@color/colorAccentPressed" />

                <TextView
                    android:id="@+id/txtDescricaoAtividades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblDescricaoAtividades"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:text="GERADOR DE LERO LERO LERO LERO LERO"
                    android:textColor="@color/colorAccentPressed"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSeveridade"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/labelData"
                    android:paddingTop="5dp"
                    android:paddingRight="2dp"
                    android:text="Severidade:"
                    android:textColor="@color/colorAccentPressed" />

                <TextView
                    android:id="@+id/txtSeveridadeAtividades"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblSeveridade"
                    android:layout_toEndOf="@id/labelData"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:text="Alta"
                    android:textColor="@color/colorAccentPressed"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="5dp">

    </RelativeLayout>

</RelativeLayout>