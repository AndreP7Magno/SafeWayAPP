<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="safewayapp.Activity.LoginActivity">

    <ImageButton
        android:id="@+id/logoSafeWay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo150x150" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoSafeWay"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="ENTRE COM SUAS REDES SOCIAIS"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#4267b2"
                    android:drawableLeft="@drawable/icons8_facebook_50"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="45dp"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnGmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#d93025"
                    android:drawableLeft="@drawable/icons8_google_plus_50"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="45dp"
                    android:textSize="18sp" />

            </LinearLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/txtOu"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:text="OU"
                  android:textColor="@color/colorPrimary"
                  android:textSize="15dp" />

              <View
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toLeftOf="@id/txtOu"
                  android:background="@color/colorPrimary"
                  />

              <View
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="15dp"
                  android:layout_toRightOf="@id/txtOu"
                  android:background="@color/colorPrimary"
                  />

          </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel" >

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:text="Esqueceu sua senha?" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@color/colorPrimary"
                android:text="Entrar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView android:id="@+id/link_cadastro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorPrimary"
                android:text="Sem conta ainda? Cadastre-se jÃ¡!"
                android:gravity="center"
                android:textSize="15dp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
